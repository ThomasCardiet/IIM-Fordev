                <button id="menu-info-btn">Modifier</button>
                
            </div>

            <div class="menu-info" id="friends">

                <div id="friends-icons">
                    <i id="waiting-friend" data-type="acceptfriend" class="popup-btn fas fa-user-clock" data-requests="{{ friends_requests | length }}"></i>
                    <i id="add-friend" data-type="addfriend" class="popup-btn fas fa-user-plus"></i>
                </div>

                <div id="friends-img-list"></div>

                <div id="friend-buttons">
                    <i data-type="friends-list" class="popup-btn fas fa-user-friends"></i>
