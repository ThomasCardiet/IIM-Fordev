                <i class="fas fa-times close"></i>

                <h4></h4>

                <div id="friends-current-msg"></div>

                <h4>Nouveau message :</h4>
                <div id="friends-new-msg">
                    <textarea id="friends-new-msg-left"></textarea>
                    <p data-friend_id="" id="friends-new-msg-send">Envoyer</p>
                </div>
            </div>

            {# ADD FRIEND POPUP #}
            <div class="menu-popup" id="addfriend-popup">

                <i class="fas fa-times close"></i>

                <div class="info-block">
                    <h3 class="info-title"><i class="fas fa-exclamation-triangle"></i> Une ou plusieurs erreurs sont parvenues:</h3>
                    <p class="infos"></p>
                </div>

                <h4>Ajouter un ami :</h4>
                <input id="add-friend-search" type="text" placeholder="Rechercher">

                <ul id="add-friend-list"></ul>

            </div>

            {# ACCEPT FRIEND POPUP #}
            <div class="menu-popup" id="acceptfriend-popup">

                <i class="fas fa-times close"></i>

                <div class="info-block">
                    <h3 class="info-title"><i class="fas fa-exclamation-triangle"></i> Une ou plusieurs erreurs sont parvenues:</h3>
